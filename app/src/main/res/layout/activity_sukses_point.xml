<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header (Kembali Button) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back button"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Beranda"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Spacer for Centering the Icon and Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Success Icon -->
        <ImageView
            android:id="@+id/successIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sukses"
            android:contentDescription="Success Icon"
            android:layout_marginTop="32dp" />

        <!-- Success Message -->
        <TextView
            android:id="@+id/successMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELAMAT ANDA TELAH BERHASIL MENUKARKAN POINT"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp" />
    </LinearLayout>

    <!-- Button at Bottom -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/primaryColor"
        android:padding="12dp"
        android:text="Cek Profile Anda"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
